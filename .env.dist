# HDM Boot Protocol - Production Environment Configuration
# Copy this file to .env and configure for your environment
# This file should NOT be committed to version control

# Application Environment
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database Configuration
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mezzio_users
DB_MARK_NAME=mezzio_mark
DB_SYSTEM_NAME=mezzio_system
DB_USER=app_user
DB_PASS=secure_password_here

# Session Configuration
SESSION_NAME=MEZZIO_SESSION
SESSION_SECURE=true
SESSION_LIFETIME=3600
SESSION_DOMAIN=
SESSION_HANDLER=redis

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_SESSION_PATH=tcp://127.0.0.1:6379

# Logging Configuration
LOG_LEVEL=info
LOG_PATH=/var/www/mezzio-app/logs
ERROR_LOG_PATH=/var/www/mezzio-app/logs/error.log
LOG_MAX_FILES=30

# Security
CSRF_SECRET=generate_random_32_char_string_here
ENCRYPTION_KEY=generate_random_32_char_key_here

# Email Configuration (if needed)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=noreply@your-domain.com
MAIL_PASSWORD=mail_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="HDM Boot Protocol"

# Monitoring
HEALTH_CHECK_TOKEN=generate_random_token_here
